<% layout('layouts/boilerplate') %> 
    <h1>Create new campground</h1>
    <form action="/campgrounds" method="post">
        <div>
            <label for="title">Title</label>
            <input type="text" name="title" id="title">
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" name="location" id="location">
        </div>
        <div>
            <label for="price">Price</label>
            <input type="number" name="price" id="price" value="$<%= campground.price %>">
        </div>
        <div>
            <label for="image">Image</label>
            <input type="text" name="image" id="image" value="<%= campground.image %> ">
        </div>
        <div>
            <label for="description">Description</label>
            <input type="text" name="description" id="description" value="<%= campground.description %> ">
        </div>
        <button>Create</button>
    </form>
    <a href="/campgrounds">Cancel</a>
